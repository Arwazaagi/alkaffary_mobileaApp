<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/locationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_toLeftOf="@+id/imageView4"
            android:layout_toStartOf="@+id/imageView4"
            android:text="king abdullah street "

            android:textColor="@color/colorPrimaryBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/invoice_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="0.13"
            android:gravity="center"
            android:text="الفاتورة "
            android:textSize="25sp" />

        <TextView
            android:id="@+id/creation_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/invoice_tv"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:text="11/10/2016"

            android:textColor="@color/colorPrimaryBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/invoice_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/creation_date_tv"
            android:layout_alignBottom="@+id/creation_date_tv"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:foregroundGravity="right"
            android:gravity="right"
            android:text="طلب رقم"

            android:textColor="@color/colorPrimaryBlack"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/invoice_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/creation_date_tv"
            android:layout_alignBottom="@+id/creation_date_tv"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/invoice_num"
            android:layout_toStartOf="@+id/invoice_num"
            android:text="10300485"

            android:textColor="@color/colorPrimaryBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/totalPrice"
            android:layout_alignBottom="@+id/totalPrice"
            android:layout_alignEnd="@+id/invoice_num_tv"
            android:layout_alignRight="@+id/invoice_num_tv"
            android:gravity="right"
            android:text="TextView"

            android:textColor="@color/colorPrimaryBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/creation_date_tv"
            android:layout_marginTop="13dp"
            android:text="المجموع"

            android:textColor="@color/colorPrimaryBlack"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/totalPrice"
            android:layout_gravity="right"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp"
            app:srcCompat="@drawable/ic_location_on_black_24dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent" />

    <ListView
        android:id="@+id/products_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp" />


</LinearLayout>