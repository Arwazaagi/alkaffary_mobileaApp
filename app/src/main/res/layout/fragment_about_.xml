                    android:text="2-Replacement and retrieval service" />

                <TextView
                    android:id="@+id/Service4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView21"
                    android:layout_marginTop="4dp"
                    android:text="3-Delivery service" />

                <TextView
                    android:id="@+id/Service5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView21"
                    android:layout_marginTop="4dp"
                    android:text="4-Installation service" />

                <TextView
                    android:id="@+id/Service6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView21"
                    android:layout_marginTop="4dp"
                    android:text="5-Store the purchased furniture" />

                <TextView
                    android:id="@+id/Service7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView21"
                    android:layout_marginTop="4dp"
                    android:text="6-Guarantee" />

                <TextView
                    android:id="@+id/Service8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView21"
                    android:layout_marginTop="4dp"
                    android:text="7-Maintenance maintenance is free for one year, according to the conditions shown on the invoice" />
                <TextView
                    android:id="@+id/Service9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView21"
                    android:layout_marginTop="4dp"
                    android:text="7-Consulting" />
            </LinearLayout>
        </ScrollView>



